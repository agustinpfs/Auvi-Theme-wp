.contact
	display: none
	position: fixed
	margin-left: auto
	margin-right: auto
	left:0
	right:0
	width:75%
	height:80%
	top: 10%
	background-color: #1d1d1d
	opacity .95
	z-index: 10
	border 3px solid #016037
	&-form
		position: absolute
		margin-left: auto
		margin-right: auto
		left:0
		right:0
		top 10%
		width:90%
		height:90%
		color white
		input
		textarea
			width 95%
			background-color transparent
			color white
			margin-top 3%
			border 1px solid #999
			height 30px
			font-family: Lato
		textarea
			height 40%
.contact-close
	background-color transparent
	color white
	position: absolute
	bottom 10px
	margin-left: auto
	margin-right: 10px
	font-family: Lato
	right:0
	border 2px solid #016037