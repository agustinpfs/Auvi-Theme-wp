@keyframes slidy {
    0% {
        margin-left:-200%
        opacity: 1
    }
    50% {
        opacity: 0
    }  
    100% {
        opacity: 1
        margin-left:0%
    }        
}

@keyframes slidya {
    from {
        margin-left:0%
    }
        
    to {
        margin-left:-100%
    }        
}

@keyframes slidyb {
    
    from {
        margin-left:-100%
    }
        
    to {
        margin-left:-200%
    }        
}


