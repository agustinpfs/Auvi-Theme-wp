    margin-left 98%

.left2
    margin-left 31.33%
.left3
    margin-left 64.66%

body
    max-width: 100%
    overflow-x hidden
.Slider
    overflow hidden
    .arrows
        width 3%
        height 90%
        margin-top 55px
        margin-bottom 55px
        position absolute
        display flex
        flex-direction column
        justify-content center
        z-index 1003

        span
            color #efefef
            z-index 1002
            cursor pointer
            padding 0rem 1rem .3rem 1rem
            border-radius 10px
            background-color alpha(#000, 0.5)
            font-size 3rem
            transition 2s
        position absolute
        bottom 4rem
        font-size 3rem
        color white
    &-content 
        display none
        background-color black
        font-size 0
        margin 0   
        position relative 
        top 0
        bottom 0        
        text-align left
        width 300%
        overflow hidden
        animation-fill-mode forwards
        padding-bottom 40%
        height 0
        img
            width 33.33%
            float left
            height auto
        p 
            position relative
            padding-bottom 40%
            height 0
            overflow hidden
            width 33.33%
            float left           
            iframe
            embed 
                position:absolute
                top:0
                left:0
                width:100%
                height:33.33%


@keyframes slidy {
    0% {
        margin-left:-200%
        opacity: 1
    }
    50% {
        opacity: 0
    }  
    100% {
        opacity: 1
        margin-left:0%
    }        
}

@keyframes slidya {
    from {
        margin-left:0%
    }
        
    to {
        margin-left:-100%
    }        
}

@keyframes slidyb {
    
    from {
        margin-left:-100%
    }
        
    to {
        margin-left:-200%
    }        
}

.anima1
    animation 1s slidy forwards 
    
.anima2
	animation 1s slidya forwards


.anima3
	animation 1s slidyb forwards
.arrow
    display none

.block
    display: block
    

    

@media (min-width: 700px)
    .Slider
        &-content
            display block
    
