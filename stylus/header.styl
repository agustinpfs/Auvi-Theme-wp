.Header
	position: fixed
	top 0
	width 100%
	// z-index: 500
	&-top
		color #035103
		text-align center
		background-color #efefef
		h3
			font-weight 300
	&-contact
		font-weight: 300
	    background-color: #023d02
	    border-radius: 5px
	&-content
		// background-color green
		background-image: linear-gradient(90deg, rgb(0, 65, 37) 25%, rgb(1, 96, 55) 100%)
		color #e6e6e6
		display flex
		justify-content space-between
		font-family Lato
		font-weight 700
		padding .5em
		border-bottom 1px solid #023d02	
	&-title
		small
			font-weight 300
		
			
		h1
			font-weight 300
			font-size: 1.5em
			
		a
			color #efefef
			text-decoration: none
			
	&-list 
		margin 0
		padding 0
	&-nav
		position fixed
		right -100%
		top 65px
		transition .5s
		background-color #035103
		width 100%
		text-align center
	&-menu
		margin auto 0
		.check
			display none
			&:checked~
				.Header-nav
					position absolute
					right 0%
				    transition .5s	
				    width 100%
				    z-index 300
		ul			
			li
				list-style none
				padding 1rem
				font-weight 300
				border-bottom 1px solid #023d02
				border-top 1px solid #015601
			li:hover
				background-color #023d02
				transition .2s	
				border-top 1px solid #023d02				
			a
				text-decoration none
				color #e6e6e6
			a:after
				height 0px


@media (min-width: 700px)
	
	.Header	
		position: relative
		&-label
			display none
		&-nav
			position relative
			right 0
			top -1px
			bottom 0		
			background-color transparent
			width 100%
			text-align center
			z-index 300
			transition 0s
			border-top 0
			ul
				
				li
					display inline-block
					border 0
					padding .2rem 1rem 0 1rem
				li:hover
					background-color transparent
					border-top 0px solid transparent	
					
				li:after
					content ''
					display block
					height 2px
					width 0
					background transparent
					transition width .5s ease, background-color .5s ease
					margin-top .3rem			
